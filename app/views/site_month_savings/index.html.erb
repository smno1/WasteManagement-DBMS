<h1>Listing site_month_savings</h1>

<table>
  <thead>
    <tr>
      <th>Site</th>
      <th>Month</th>
      <th>Month saving</th>
      <th>Recycling rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @site_month_savings.each do |site_month_saving| %>
      <tr>
        <td><%= site_month_saving.site %></td>
        <td><%= site_month_saving.month %></td>
        <td><%= site_month_saving.month_saving %></td>
        <td><%= site_month_saving.recycling_rate %></td>
        <td><%= link_to 'Show', site_month_saving %></td>
        <td><%= link_to 'Edit', edit_site_month_saving_path(site_month_saving) %></td>
        <td><%= link_to 'Destroy', site_month_saving, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

