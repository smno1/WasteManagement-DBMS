<table class='table'>
  <thead>
    <tr>
      <th><%= sortable "Month"%></th>
      <th><%= sortable "collection_date"%></th>
      <th><%= sortable "collection_day"%></th>
      <th><%= sortable "tonnes"%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @baseline_invoices.each do |baseline_invoice| %>
      <tr>
        <td><%= baseline_invoice.Month.strftime('%b,%Y') %></td>
        <td><%= baseline_invoice.collection_date %></td>
        <td><%= baseline_invoice.collection_day %></td>
        <td><%= baseline_invoice.tonnes %></td>
        <td><%= link_to 'Show', baseline_invoice %></td>
        <td><%= link_to 'Edit', edit_baseline_invoice_path(baseline_invoice) %></td>
        <td><%= link_to 'Destroy', baseline_invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%=will_paginate @baseline_invoices%> <br>