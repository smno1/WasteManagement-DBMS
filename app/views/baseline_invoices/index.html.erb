<h1>Baseline invoices data</h1>

<%= info_from_service params[:service_id]%>

<%=form_tag(baseline_invoices_path, :method=>'get') do%>
	<%=hidden_field_tag :service_id,params[:service_id]%>
	<%=hidden_field_tag :direction,params[:direction]%>
	<%=hidden_field_tag :sort,params[:sort]%>
	<%=label_tag 'month'%>
	<%=month_select_tag(1990)%> <br>
	<%=label_tag 'Collection date from'%>
	<%= month_duration_select_tag%> <br>
	<%=submit_tag "Search"%>
<%end%>
<div id='baseline_invoices_table'><%= render 'baseline_invoices'%></div>
<%= link_to 'New Baseline invoices', new_baseline_invoice_path(:service_id=>params[:service_id]) %> 
| <%= link_to 'Back', services_path %>
