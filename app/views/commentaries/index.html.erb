<h1>Listing commentaries</h1>

<table>
  <thead>
    <tr>
      <th class='col-md-2'>Comments</th>
      <th class='col-md-2'>Month</th>
      <th class='col-md-2'>Site Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% unless @commentaries.nil?%>
  <tbody>
    <% @commentaries.each do |commentary| %>
      <tr>
        <td class='col-md-2'><%= commentary.comments %></td>
        <td class='col-md-2'><%= commentary.month %></td>        
        <td class='col-md-2'>
        <%unless commentary.site.nil?%>
        <%= commentary.site.site_name %>
        <%end%>
        </td>
        <td><%= link_to 'Show', commentary %></td>
        <td><%= link_to 'Edit', edit_commentary_path(commentary) %></td>
        <td><%= link_to 'Destroy', commentary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <%end%>
</table>

<br>

