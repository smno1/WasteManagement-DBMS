<h1>Listing services</h1>

<table>
  <thead>
    <tr>
      <th class='col-md-2'>Bin type</th>
      <th class='col-md-2'>Is recycle</th>
      <th class='col-md-2'>Capacity cubic meters</th>
      <th class='col-md-2'>Max load</th>
      <th class='col-md-2'>Collection rate</th>
      <th class='col-md-2'>Density of waste</th>
      <th class='col-md-2'>Site</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td class='col-md-2'><%= service.bin_type %></td>
        <td class='col-md-2'><%= service.is_recycle %></td>
        <td class='col-md-2'><%= service.capacity_cubic_meters %></td>
        <td class='col-md-2'><%= service.max_load %></td>
        <td class='col-md-2'><%= service.collection_rate %></td>
        <td class='col-md-2'><%= service.density_of_waste %></td>
        <td class='col-md-2'><%= service.site.site_name %></td>
        <td class='col-md-2'><%= link_to 'Show', service %></td>
        <td class='col-md-2'><%= link_to 'Edit', edit_service_path(service) %></td>
        <td class='col-md-2'><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

