<!DOCTYPE html>
<html>
	<head>
		<title>Waste Management | <%= yield(:title)%></title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div id="wrapper">
			<div>
				<ul class="nav navbar-top-links navbar-right">
					<% if user_signed_in? %>
						Logged in as <strong> <%= current_user.email %> </strong>.
						<!--<% if '328862641@qq.com'.eql?(current_user.email) %>-->
							<%= link_to "Sign up new client", new_user_registration_path, :class => "btn btn-default" %>
						<!--<%end%>-->
						<%= link_to "Sign out", destroy_user_session_path, method: :delete, :class => "btn btn-default" %>
					<% else %>
						<%= link_to "Sign in", new_user_session_path, :class => "btn btn-default" %>
					<% end %>
				</ul>
			</div>

			<!-- Sidebar -->
			<div class="sidebar-nav navbar-collapse">
				<div id="sidebar-wrapper">
					<ul class="sidebar-nav" id='side-menu'>
						<li class="sidebar-brand">
							<%= link_to 'WasteManagement', root_path %>
						</li>

						<li>
							<a href="#"> DataManagement<span class="fa fa-2x arrow"></span></a>
							<ul class="nav nav-second-level description-toggle">
								<li>
									<%= link_to 'Client Company', companies_path %>
								</li>
								<li>
									<%= link_to 'Sites', sites_path%>
								</li>
								<li>
									<%= link_to 'Commentaries', commentaries_path%>
								</li>
								<li>
									<%= link_to 'Services', services_path%>
								</li>
							</ul>
						</li>
					</ul>
				</div>
			</div>
			<!-- /#sidebar-wrapper -->

			<!-- Page Content -->
			<div id="page-content-wrapper">
				<div class="container-fluid">
					<div class="row">
						<div class="col-lg-12">

							<h2><%= yield(:title)%></h2>
							<%= yield %>
						</div>
					</div>
				</div>
			</div>
			<!-- /#page-content-wrapper -->

			<a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>

		</div>

		<!-- Menu Toggle Script -->
		<script>
			$("#menu-toggle").click(function(e) {
				e.preventDefault();
				$("#wrapper").toggleClass("toggled");
			});
		</script>

	</body>
	</body>
</html>
