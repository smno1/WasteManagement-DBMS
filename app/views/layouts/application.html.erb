<!DOCTYPE html>
<html>
	<head>
		<title>Waste Management | <%= yield(:title)%></title>
		<%if request.env["Rack-Middleware-PDFKit"] == "true"%>
		  <link rel="stylesheet" type="text/css" href=<%=Rails.root.join("vendor","assets","stylesheets","pdf_print.css").to_s%>>
		<%else%>
		  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%end%>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div id="wrapper">
			<div class='hidden-print'>
				<ul class="nav navbar-top-links navbar-right">
					<% if user_signed_in? %>
						Logged in as <strong> <%= current_user.email %> </strong>.
						<%= link_to "Sign out", destroy_user_session_path, method: :delete, :class => "btn btn-default" %>
						<%= link_to 'Your Conversations', conversations_path , :class => "btn btn-default"%>
						<%= link_to 'Edit Profile', edit_user_registration_path, :class => "btn btn-default" %>
					<% else %>
						<%= link_to "Sign in", new_user_session_path, :class => "btn btn-default" %>
						<%= link_to "Sign up", new_user_registration_path, :class => "btn btn-default" %>
					<% end %>
				</ul>
				<% flash.each do |key, value| %>
    				<div class="alert alert-<%= key %>">
      					<%= value %>
    				</div>
  				<% end %>
	  			<!--<div class="page-header">
    				<h1><%= yield :page_header %></h1>
  				</div>-->
			</div>

			<p id="error"><%= flash[:error] %></p>
			
			<!-- Sidebar -->
			<div class="sidebar-nav navbar-collapse hidden-print">
				<div id="sidebar-wrapper">
					<ul class="sidebar-nav" id='side-menu'>
						<li class="sidebar-brand">
							<%= link_to 'WasteManagement', root_path %>
						</li>
						<!--<li>
							<a href="#"> Search<span class="fa fa-2x arrow"></span></a>
							<ul class="nav nav-second-level description-toggle">
								<li>
									<%= link_to 'Client Company', company_search_path %>
								</li>
								<li>
									<%= link_to 'Sites', sites_path%>
								</li>
								<li>
									<%= link_to 'Services', services_path%>
								</li>
							</ul>
						</li>-->
							<% if user_signed_in? %>
								<li>
									<%= link_to 'Dashboard', welcome_portal_path%>
								</li>
							<%if is_admin?%>
						<li>
							<a href="#"> DataManagement<span class="fa fa-2x arrow"></span></a>
							<ul class="nav nav-second-level description-toggle">
								<li>
									<%= link_to 'Client Company', companies_path %>
								</li>
								<li>
									<%= link_to 'Sites', sites_path%>
								</li>
								<li>
									<%= link_to 'Services', services_path%>
								</li>
							</ul>
						</li>
						<li>
							<%=link_to 'User Management', user_management_path%>
						</li>
						<li>
							<%=link_to 'Printable Doc', site_month_invoice_path%>
						</li>
						<li>
							<%=link_to 'Saving against baseline', saving_against_baselines_path%>
						</li>
						<li>
							<%=link_to 'Site month saving', site_month_savings_path%>
						</li>
						<%end%>
						<%end%>
					</ul>
				</div>
			</div>
			<!-- /#sidebar-wrapper -->

			<!-- Page Content -->
			<div id="page-content-wrapper">
				<div class="container-fluid">
					<div class="row">
						<div class="col-lg-12">

							<h2><%= yield(:title)%></h2>
							<%= yield %>
						</div>
					</div>
				</div>
			</div>
			<!-- /#page-content-wrapper -->

			<div class="hidden-print">
				<a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
			</div>
		</div>

		<!-- Menu Toggle Script -->
		<script>
			$("#menu-toggle").click(function(e) {
				e.preventDefault();
				$("#wrapper").toggleClass("toggled");
			});
		</script>

	</body>
</html>
