<h1>UserManagement</h1>
<%= form_tag(user_management_update_path, :method=>'get')  do %>
  <%=hidden_field_tag :user_id,@user.id%>
  <div class="field">
    <%= label_tag :email %><br />
    <%= email_field_tag :email, @user.email %>
  </div>
  
  <div class="field">
    <%= label_tag :user_name %><br />
    <%= text_field_tag :user_name,@user.user_name%>
  </div>

  <div class="field">
    <%= label_tag :note %><br />
    <%= text_field_tag :note,@user.note%>
  </div>

    <div class="company_id">
    <%= label_tag :company_id %><br>
    <%= select_tag :company_id, options_from_collection_for_select(@companies,"id","client_name",@user.company_id),:include_blank=>true %>
  </div>
  <br>
  <div class="actions">
    <%= submit_tag "Update" %>
  </div>
<% end %>

