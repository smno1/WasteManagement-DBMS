<table class='display responsive no-wrap datatable'>
	<thead>
		<tr>
			<th>User name</th>
			<th>Email</th>
			<th>Company</th>
			<th>Note</th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.user_name %></td>
			<td><%= user.email %></td>
			<%if user.company.blank?%>
				<td>Haven't assign company</td>
			<%else%>
				<td><%= user.company.client_name %></td>
			<%end%>
			<td><%= user.note %></td>
			<td><%= link_to 'Edit', user_management_edit_path(:user_id=>user.id)%></td>
			<td><%= link_to 'Destroy', user_management_destroy_path(:user_id=>user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>

